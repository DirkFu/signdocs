<!DOCTYPE html>
<html>
  <head>
    <title>SignDocs</title>
    <%= csrf_meta_tags %> 
    <%= csp_meta_tag %>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100;0,400;0,700;1,100&family=Roboto:ital,wght@0,300;0,400;0,700;1,300&family=Titillium+Web:wght@200;300;400;700&display=swap"
      rel="stylesheet"
    />
    <%= stylesheet_link_tag 'application', media: 'all' %> 
    <%= javascript_include_tag 'application' %>
    <% if current_user %>
        <script>
        window.currentUser = {
            "id": <%= current_user.id %>,
            "username": "<%= current_user.username %>",
            "email": "<%= current_user.email %>"
        };
        </script>
    <% end %>
  </head>
  <body>
    <%= yield %>
  </body>
</html>
